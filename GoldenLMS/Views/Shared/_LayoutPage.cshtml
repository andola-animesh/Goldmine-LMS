<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Lead Management System</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/Bootstrap/bootstrap.min.css")
    @Styles.Render("~/Content/css/style.css")
    @Scripts.Render("~/Content/js/jquery-1.9.1.min.js")
</head>

<body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Goldmine LMS</a>(Lead Management System)
            </div>


            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @*<li><a href="#">Home</a></li>
                    <li><a href="#">About us</a></li>
                    <li><a href="#">Contact us</a></li>*@
                    <li><a href="#">
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>
                    </a></li>
                </ul>
            </div>
        </div>
    </div>

    <div id="body" class="container-fluid">
        <div class="row">
            <div class="col-md-2 sidebar">
                 <ul class="nav nav-sidebar">
                    <li class="divider"></li>
                    <li @{if ((ViewContext.RouteData.Values["controller"].ToString() == "Lead") || (ViewContext.RouteData.Values["controller"].ToString() == "Note"))
                                 {<text>class="active"</text>}}>@Html.ActionLink("View Leads", "StatusIndex", "Lead")</li>
                    <li class="divider"></li>
                    <li  @{if ((ViewContext.RouteData.Values["controller"].ToString() == "Lead") && (ViewContext.RouteData.Values["action"].ToString() == "Create"))
                                 {<text>class="active"</text>}}>@Html.ActionLink("Create Lead", "Create", "Lead")</li>
                    <li class="divider"></li>
                </ul>
            </div>
        </div>


        <div class="col-md-10 col-md-offset-2 col-xs-10 col-xs-offset-2 main">
            <div class="col-md-12 page header">
                <div class="row">
                    <div class="col-md-12" style="height: 20px;">
                    </div>
                </div>
                @RenderSection("featured", required: false)
                <section>
                    @RenderBody()
                </section>
            </div>
        </div>
    </div>

    <div class="footer text-center">
        <div class="container">
            <p class="text-center footertop">2009-2014 Developed by Andolasoft</p>
        </div>
    </div>
    <!--Sticky footer ends from here -->


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>



